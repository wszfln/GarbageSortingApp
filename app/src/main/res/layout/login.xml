<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login">

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="166dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:textColorHint="#979292"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvTitle2" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="37dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColorHint="#979292"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail" />

    <android.widget.Button
        android:id="@+id/btnLogin"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#90CF47"
        android:text="Sign In"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/edtPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

    <android.widget.Button
        android:id="@+id/btnTourist"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="#90CF47"
        android:text="Login as tourists"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <android.widget.Button
        android:id="@+id/btnCreate"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="#90CF47"
        android:text="Create Account"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/btnTourist"
        app:layout_constraintTop_toBottomOf="@+id/btnTourist" />

    <TextView
        android:id="@+id/txvTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Sign in"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wonderful Trip!"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="@+id/txvTitle1"
        app:layout_constraintTop_toBottomOf="@+id/txvTitle1" />

</androidx.constraintlayout.widget.ConstraintLayout>